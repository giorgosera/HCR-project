<script>
function changeLanguage(lang){
CYP.get(("/user/locale/"+lang), false, false, function(response){
if (response.s) {location = location;}
});}
$("a#lang-en").live("click", function(){changeLanguage("en");});
$("a#lang-gr").live("click", function(){changeLanguage("gr");});
